{
  "private": true,
  "version": "1.0.0",
  "description": "Cumulus Framework for ingesting and processing Nasa Earth data streams",
  "scripts": {
    "e2e": "ava tests/*.js --serial",
    "test": "nyc lerna run test",
    "bootstrap": "lerna bootstrap",
    "ybootstrap": "lerna bootstrap --npm-client=yarn",
    "bootstrap-no-build": "lerna bootstrap --npm-client=yarn --ignore-scripts",
    "update": "lerna publish --skip-git --skip-npm",
    "publish": "lerna publish --skip-git --repo-version $VERSION --yes",
    "clean": "lerna clean",
    "build": "lerna run --parallel --no-sort build",
    "watch": "lerna run --parallel --no-sort watch",
    "coverage": "nyc report --reporter text-summary --reporter html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cumulus-nasa/cumulus"
  },
  "ava": {
    "files": "test"
  },
  "nyc": {
    "exclude": [
      "**/tests",
      "**/test",
      "packages/common/.tmp"
    ]
  },
  "keywords": [
    "GIBS",
    "CUMULUS",
    "NASA"
  ],
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsdoc": "^3.5.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "lerna": "^2.9.0",
    "nyc": "^11.6.0"
  },
  "dependencies": {
    "fs-extra": "^5.0.0"
  }
}
