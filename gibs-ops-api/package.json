{
  "name": "gibs-ops-api",
  "version": "0.1.0",
  "description": "Implements the API backing the GIBS Ops Dashboard",
  "main": "lambda.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start": "export LOCAL_NODE=true; npm run build && node dist/local.js",
    "start-debug": "export LOCAL_NODE=true; npm run build && node --inspect dist/local.js",
    "start-debug-brk": "export LOCAL_NODE=true; npm run build && node --inspect-brk dist/local.js",
    "start-watch": "export LOCAL_NODE=true; bin/parallel.sh 'webpack --config webpack.config.js  -w' 'nodemon dist/local.js -w dist'",
    "mocha": "mocha-webpack --require babel-polyfill --webpack-config webpack.config-test.js test/**/*spec.js",
    "mocha-junit": "npm run mocha -- --reporter mocha-junit-reporter --reporter-options mochaFile=test-results.xml",
    "lint": "eslint app test",
    "test": "npm run lint && npm run mocha",
    "test-ci": "npm run lint && npm run mocha-junit"
  },
  "dependencies": {
    "aws-sdk": "^2.45.0",
    "aws-serverless-express": "^2.2.0",
    "babel-plugin-extensible-destructuring": "^4.1.0",
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "elasticsearch": "^13.0.0",
    "express": "^4.15.2",
    "express-validator": "^3.2.0",
    "extensible-runtime": "^4.1.0",
    "http-aws-es": "^1.1.3",
    "immutable": "^3.8.1",
    "ingest-common": "file:../ingest-common",
    "js-yaml": "^3.8.3",
    "lodash": "^4.17.4",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-immutable": "^1.6.0",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "expect.js": "^0.3.1",
    "html-loader": "^0.4.5",
    "markdown-loader": "^2.0.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-webpack": "^0.7.0",
    "nodemon": "^1.11.0",
    "webpack": "^2.4.1"
  }
}
