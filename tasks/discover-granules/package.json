{
  "name": "@cumulus/discover-granules",
  "version": "1.4.1",
  "description": "Discover Granules in FTP/HTTP/SFTP endpoints",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "engine": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "test": "ava",
    "test-coverage": "nyc ava",
    "local": "node index.js | pino",
    "build": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress -w",
    "prepublishOnly": "PRODUCTION=true npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": "tests",
    "color": false
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/common": "^1.4.1",
    "@cumulus/cumulus-message-adapter-js": "^1.0.1",
    "@cumulus/ingest": "^1.4.1",
    "@cumulus/test-data": "^1.4.0",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "webpack": "~4.5.0",
    "webpack-cli": "~2.0.14",
    "ava": "^0.23.0",
    "fs-extra": "^5.0.0",
    "lodash.clonedeep": "^4.5.0",
    "nyc": "^11.4.1"
  }
}
