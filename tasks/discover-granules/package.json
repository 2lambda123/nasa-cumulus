{
  "name": "@cumulus/discover-granules",
  "version": "1.3.0",
  "description": "Discover Granules in FTP/HTTP/SFTP endpoints",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cumulus-nasa/cumulus"
  },
  "scripts": {
    "test": "ava",
    "test-coverage": "nyc ava",
    "local": "node index.js | pino",
    "build": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress -w",
    "postinstall": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": "tests",
    "color": false
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/common": "^1.3.0",
    "@cumulus/cumulus-message-adapter-js": "^1.0.1",
    "@cumulus/ingest": "^1.3.0",
    "@cumulus/test-data": "^1.3.0",
    "json-loader": "~0.5.7",
    "lodash.get": "^4.4.2",
    "webpack": "~1.12.13"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "fs-extra": "^5.0.0",
    "lodash.clonedeep": "^4.5.0",
    "nyc": "^11.4.1"
  }
}
