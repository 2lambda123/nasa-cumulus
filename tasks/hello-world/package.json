{
  "name": "@cumulus/hello-world",
  "version": "1.4.0",
  "description": "Example task",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "ava tests/*.js --serial --no-color",
    "test-coverage": "nyc ava tests/*.js --serial",
    "build": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress",
    "watch": "rm -rf dist && mkdir dist && cp -R schemas dist/ && webpack --progress -w",
    "postinstall": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "author": "Cumulus Authors",
  "license": "Apache-2.0",
  "dependencies": {
    "@cumulus/cumulus-message-adapter-js": "^1.0.1",
    "webpack": "~4.5.0",
    "webpack-cli": "~2.0.14"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0"
  }
}
