{
  "title": "LzardsBackupOutput",
  "description": "Describes the output expected by the LzardsBackup task component",
  "type": "object",
  "required": ["backupResults", "granules"],
  "properties": {
    "backupResults": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["filename", "status", "granuleId"],
        "properties": {
          "body": { "type": "string" },
          "filename": { "type": "string" },
          "status": { "type": "string" },
          "granuleId": { "type": "string" },
          "statusCode": { "type": "number" }
        }
      },
      "granules": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["files", "granuleId"],
          "properties": {
            "granuleId": { "type": "string" },
            "dataType": { "type": "string" },
            "version": { "type": "string" },
            "collectionId": { "type": "string" },
            "files": "{{files}}"
          }
        }
      }
    }
  }
}
