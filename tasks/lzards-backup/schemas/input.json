{
  "title": "LzardsBackupInput",
  "description": "Describes the input expected by the LzardsBackup task component",
  "type": "object",
  "required": ["granules"],
  "properties": {
    "granules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["files", "granuleId", "dataType", "version"],
        "properties": {
          "granuleId": { "type": "string" },
          "dataType": { "type": "string" },
          "version": { "type": "string" },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["bucket", "key"],
              "properties": {
                "bucket": {
                  "description": "Bucket where file is archived in S3",
                  "type": "string"
                },
                "key": {
                  "description": "S3 Key for archived file",
                  "type": "string"
                },
                "type": {
                  "description": "",
                  "type": "string"
                },
                "source": {
                  "type": "string"
                },
                "checksum": {
                  "type": "string"
                },
                "checksumType": {
                  "type": "string"
                },
                "size": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  }
}
