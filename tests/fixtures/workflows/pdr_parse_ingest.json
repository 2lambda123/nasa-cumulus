{
  "DiscoverPdrs": {
    "collection": "MOD09GQ",
    "provider": "ftp",
    "name": "DiscoverPdrs",
    "steps": [
      {
        "name": "DiscoverPdrs",
        "lambda": "tasks/discover-pdrs",
        "handler": "index.handler",
        "cumulusConfig": {
          "templateUri": "{{$.meta.templates.ParsePdr}}",
          "useQueue": true,
          "queueUrl": "{{$.meta.queues.startSF}}",
          "stack": "{{$.meta.stack}}",
          "provider": "{{$.meta.provider}}",
          "bucket": "{{$.meta.buckets.internal.name}}",
          "provider_path": "{{$.meta.rule.context.provider_path}}"
        }
      },
      {
        "name": "QueuePdrs",
        "lambda": "tasks/queue-pdrs",
        "handler": "index.handler",
        "cumulusConfig": {
          "provider": "{{$.meta.provider}}",
          "collection": "{{$.meta.collection}}",
          "queueUrl": "{{$.meta.queues.startSF}}",
          "parsePdrMessageTemplateUri": "{{$.meta.templates.ParsePdr}}"
        }
      }
    ]
  },
  "ParsePdr": {
    "collection": "MOD09GQ",
    "provider": "ftp",
    "name": "ParsePdr",
    "steps": [
      {
        "name": "ParsePdr",
        "lambda": "tasks/parse-pdr",
        "handler": "index.handler",
        "cumulusConfig": {
          "provider": "{{$.meta.provider}}",
          "collection": "{{$.meta.collection}}",
          "bucket": "{{$.meta.buckets.internal.name}}",
          "stack": "{{$.meta.stack}}",
          "templateUri": "{{$.meta.templates.IngestGranule}}",
          "queueUrl": "{{$.meta.queues.startSF}}"
        }
      }
    ]
  }
}
